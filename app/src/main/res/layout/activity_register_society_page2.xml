<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    tools:context="com.example.tejashree.societymanagementsystem.gui.memberGUI.CreateNewMemberActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/firstNameID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint="   First Name"
        android:inputType="textPersonName"
        app:layout_constraintRight_toLeftOf="@+id/lastNameID"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lastNameID"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lastNameID"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/lastNameID"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint=" Last Name"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emailID"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint="   Enter Email"
        android:inputType="textEmailAddress"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="74dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <EditText
        android:id="@+id/passID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint=" Create Password"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/emailID"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/emailID"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/emailID" />

    <EditText
        android:id="@+id/conPassID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/passID"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/passID"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/passID" />



    <EditText
        android:id="@+id/aadharNoID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/textboxstyleroundcap"
        android:ems="10"
        android:hint="   Aadhar No."
        android:inputType="number"
        android:maxLength="12"
        app:layout_constraintLeft_toLeftOf="@+id/conPassID"
        app:layout_constraintRight_toRightOf="@+id/conPassID"
        app:layout_constraintTop_toBottomOf="@+id/conPassID"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/mobileNoID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="   Mobile No"
        android:maxLength="10"
        android:background="@drawable/textboxstyleroundcap"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/aadharNoID"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/aadharNoID"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/aadharNoID"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/nextPage2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nextPage2"
        android:background="@drawable/textboxstyleroundcap"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/mobileNoID"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
